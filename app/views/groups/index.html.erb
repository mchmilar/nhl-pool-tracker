<%= flash[:notice] %>
<% provide(:title, 'Groups') %>
<div>
  

  <div class='panel-group' id='accordion' role='tablist' aria-multiselectable='true'>  
  <% @groups.each_with_index do |(id, group_hash), index| %>
    
    <div class='panel panel-default'>
      <div class='panel-heading' role='tab' id='heading<%= index %>'>
        <h4 class='panel-title'>
          <a role='button' data-toggle='collapse' data-parent='#accordion' href='#collapse<%= index %>' aria-expanded='false' aria-controls='collapse<%= index %>'>
            <%= group_hash[:name] %>
          </a>
        </h4>
      </div>
      <div id='collapse<%= index %>' class='panel-collapse collapse' role='tabpanel' aria-labelledby='heading<%= index %>'>
        <div class='panel-body'>
          <table id='group-table-#{id}' class='table table-striped table-hover players-table group-inner-table'>
            <thead>
              <tr>
                <th>Draft Pos.</th>
                <th>Name</th>
                <th>Team</th>
                <th>Position</th>
                <th>Projected Points</th>
              </tr>
            </thead>
            <tbody>
              <% group_hash[:players].each do |player| %>
                <tr>
                  <td><%= player.draft_pos %></td>
                  <td><%= player.name %></td>
                  <td><%= player.team_abbrev %></td>
                  <td><%= player.position %></td>
                  <td><%= player.lwl_pts %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
  <% end %>
  </div>
  
  

</div>