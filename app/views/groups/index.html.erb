<%= flash[:notice] %>
<% provide(:title, 'Groups') %>
<div>
    <table id="groups-list" class="table table-striped table-hover players-table">
      <thead>
        <tr>
          <th>Team Name</th>
          <th>Max Exp Pts</th>
          <th>Min Exp Pts</th>
          <th>Players</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |id, group_hash| %>
          <tr>
            <td id="group-name"><%= group_hash[:name] %></td>
            <td id="group-max-pts"><%= group_hash[:max_pts] %></td>
            <td id="group-min-pts"><%= group_hash[:min_pts] %></td>
            <td>
              <table id="group-table-#{id}" class="table table-striped table-hover players-table group-inner-table">
                <thead>
                  <tr>
                    <th>Draft Pos.</th>
                    <th>Name</th>
                    <th>Team</th>
                    <th>Position</th>
                    <th>Projected Points</th>
                  </tr>
                </thead>
                <tbody>
                  <% group_hash[:players].each do |player| %>
                    <tr>
                      <td><%= player.draft_pos %></td>
                      <td><%= player.name %></td>
                      <td><%= player.team_abbrev %></td>
                      <td><%= player.position %></td>
                      <td><%= player.lwl_pts %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </td>
          </tr>
        <% end %>
      </tbody>
      
    </table>
    <br/>
  
</div>