<% provide(:title, 'Players') %>
<div class="container wide-table">
  <div class="row" style="margin-top:75px;">
      <% if flash[:updated_stats] %>
      <% flash[:updated_stats].each do |player| %>
          <%= player %> <br/>
      <% end %>
    <% end %>

    <table id="players" class="table table-striped table-hover players-table">
      <thead>
        <tr>
          <th>LWL Rank</th>
          <th>Draft Pos.</th>
          <th>Name</th>
          <th>Team</th>
          <th>Group</th>
          <th>Proj P</th>
          <th>P</th>
          <th>Proj P/G</th>
          <th>CP/G</th>
          <th>G</th>
          <th>A</th>
          <th>PPG</th>
          <th>PPP</th>
          <th>SHG</th>
          <th>GWG</th>
          <th>Shots</th>
          <th>SH %</th>
          <th>ATOI</th>
        </tr>
      </thead>
      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.lwl_rank %></td>
            <td><%= player.draft_pos %></td>
            <td><%= link_to player.name, player_path(player) %></td>
            <td><%= player.team_abbrev %></td>
            <td><%= player.group.name if player.group_id %></td>
            <td><%= player.lwl_pts %></td>
            <td><%= player.pts %></td>
            <td><%= player.prjct_pts_game.round(2) %></td>
            <td><%= player.pts_game.round(2) %></td>
            <td><%= player.goals %></td>
            <td><%= player.assists %></td>
            <td><%= player.ppg %></td>
            <td><%= player.ppp %></td>
            <td><%= player.shg %></td>
            <td><%= player.gwg %></td>
            <td><%= player.shots %></td>
            <td><%= player.s_pct.round(2) if player.s_pct %></td>
            <td><%= player.atoi.round(2) if player.atoi %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>