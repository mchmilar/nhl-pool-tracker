<%= render 'shared/errors', obj: @team %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@team, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of team", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'butn btn-primary btn-lg' %>
        </div>
      </div>
      
    <% end %>
    <div class="col-xs-4 col-xs-offset-2">
      <%= link_to 'Cancel and return to team listing', teams_path %>
    </div>
    
  </div>
</div>